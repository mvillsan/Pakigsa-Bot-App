<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/reserveIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_reservations"
            app:civ_border_color="@color/purple"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/dateCheckINTV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateCheckOUTTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateCheckINTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_light"
            android:text="Check-Out Date"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/timeCheckInTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_toEndOf="@+id/dateCheckINTV"
            android:layout_toRightOf="@id/dateCheckINTV"
            android:fontFamily="@font/poppins_light"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeCheckInTV"
            android:layout_marginStart="142dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_medium"
            android:text="status"
            android:textColor="@color/darkgreen"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estNameTV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateCheckOUTTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:text="Est Name"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/reserveNameTV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/estNameTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:text="Name of Reservation"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/paxLbl"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reserveNameTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:text="Reserved for:"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/paxTV"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reserveNameTV"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/paxLbl"
            android:text="#"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/infoBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="215dp"
            android:layout_toRightOf="@id/reserveIcon"
            app:srcCompat="@drawable/ic_info" />

        <ImageView
            android:id="@+id/emailBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/infoBtn"
            android:layout_marginLeft="215dp"
            android:layout_toRightOf="@id/reserveIcon"
            app:srcCompat="@drawable/gmail_icon" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>