<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/restoCafeImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_imageicon"
            app:riv_border_color="@color/white"
            app:riv_border_width="2dip"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/restoCafeName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/restoCafeImg"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restoCafeAdd"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/restoCafeName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/restoCafeImg"
            android:text="Address"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="italic" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_below="@id/restoCafeAdd"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/restoCafeImg"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:scaleX=".4"
            android:scaleY=".4"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/ratingLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restoCafeAdd"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/restoCafeImg"
            android:fontFamily="@font/poppins_light"
            android:text="1.0"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/resortEstFeedback"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-11dp"
            android:layout_toRightOf="@id/restoCafeImg"
            android:fontFamily="@font/poppins_light"
            android:text="Ratings and Reviews"
            android:textSize="10sp" />

        <Button
            android:id="@+id/selectBtnResto"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="83dp"
            android:layout_toEndOf="@+id/restoCafeAdd"
            android:layout_toRightOf="@id/restoCafeName"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>