<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgResort"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_imageicon"
            app:riv_border_color="@color/white"
            app:riv_border_width="2dip"
            app:riv_corner_radius="10dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/resortRFNameTV"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgResort"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resortCapacLbl"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/resortDescTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgResort"
            android:text="Capacity:"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/resortCapacTV"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/resortDescTV"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/resortCapacLbl"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/resortDescTV"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:layout_below="@id/resortRFNameTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgResort"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/resortRateLbl"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/resortCapacTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgResort"
            android:text="Rate: Php "
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/resortRateTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/resortCapacTV"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/resortRateLbl"
            android:text="Rate"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/reserveRoomBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/resortDescTV"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>