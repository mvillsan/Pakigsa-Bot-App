<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgreen"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/customerBtn"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:background="@color/peach"
        android:drawableEnd="@drawable/signin"
        android:fontFamily="@font/comforta"
        android:paddingEnd="10dp"
        android:text="Customer"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagTxt"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/businessOwnerBtn"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:background="@color/peach"
        android:drawableEnd="@drawable/signin"
        android:fontFamily="@font/comforta"
        android:paddingEnd="10dp"
        android:text="Business Owner"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerBtn"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/tagTxt"
        android:layout_width="349dp"
        android:layout_height="37dp"
        android:fontFamily="@font/poppins_light"
        android:text="Choose from below: "
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pakigsaBotTxt"
        app:layout_constraintVertical_bias="0.122" />

    <TextView
        android:id="@+id/pakigsaBotTxt"
        android:layout_width="295dp"
        android:layout_height="121dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Welcome to Pakigsa-Bot"
        android:textAlignment="center"
        android:textColor="@color/lightpurple"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />
</androidx.constraintlayout.widget.ConstraintLayout>