<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@drawable/topbar_gray_bg"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    tools:context=".RestaurantAndCafe.RestoReserveDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RestaurantAndCafe.RestoReserveDetails">

        <TextView
            android:id="@+id/orderTxT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Pre-Order Details"
            android:textColor="@color/darkgreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/estImage"
            app:layout_constraintVertical_bias="0.029" />

        <TextView
            android:id="@+id/reservationTimeTV"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginBottom="316dp"
            android:fontFamily="@font/poppins_medium"
            android:text="> Reservation Time:"
            android:textColor="@color/darkgreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            app:layout_constraintVertical_bias="0.045" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/estImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_imageicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toEndOf="@+id/backBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005"
            app:riv_border_color="@color/darkgreen"
            app:riv_border_width="1dip"
            app:riv_corner_radius="5dip"
            app:riv_mutate_background="true" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@drawable/back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021" />

        <TextView
            android:id="@+id/estName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="name of est"
            android:textColor="@color/darkgreen"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/estImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.028" />

        <TextView
            android:id="@+id/dateToReservaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="316dp"
            android:fontFamily="@font/poppins_medium"
            android:text="> Reservation Date:"
            android:textColor="@color/darkgreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.143"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderTxT"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/datePicker"
            android:layout_width="210dp"
            android:layout_height="32dp"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="18dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="7dp"
            android:text="Tap to select a date"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateToReservaTxt"
            app:layout_constraintVertical_bias="0.024" />

        <ImageView
            android:id="@+id/timeImg"
            android:layout_width="26dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_time"
            app:layout_constraintEnd_toStartOf="@+id/timeSlotSpinner"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reservationTimeTV">

        </ImageView>

        <Spinner
            android:id="@+id/timeSlotSpinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:gravity="center"
            android:textAlignment="center"
            android:theme="@style/SpinnerTextViewItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reservationTimeTV"></Spinner>

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeSlotSpinner"
            app:layout_constraintVertical_bias="0.048"
            app:srcCompat="@drawable/white_rect3" />

        <TextView
            android:id="@+id/whoseTxt"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:fontFamily="@font/comforta"
            android:text="Who's coming?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintVertical_bias="0.118" />

        <TextView
            android:id="@+id/adultsTxt"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:fontFamily="@font/comforta"
            android:text="(13 above) Adults"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/whoseTxt"
            app:layout_constraintVertical_bias="0.28" />

        <TextView
            android:id="@+id/infantsTxt"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:fontFamily="@font/comforta"
            android:text="(2-under) Infants"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/childrenTxt"
            app:layout_constraintVertical_bias="0.627" />

        <EditText
            android:id="@+id/infantsPax"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="0"
            android:inputType="number"
            android:textColor="@color/darkgreen"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toEndOf="@+id/infantsTxt"
            app:layout_constraintTop_toBottomOf="@+id/childPax"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/adultPax"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="0"
            android:inputType="number"
            android:textColor="@color/darkgreen"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toEndOf="@+id/adultsTxt"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintVertical_bias="0.306" />

        <TextView
            android:id="@+id/childrenTxt"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:fontFamily="@font/comforta"
            android:text="(2-12) Children   "
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/adultsTxt"
            app:layout_constraintVertical_bias="0.368" />

        <EditText
            android:id="@+id/childPax"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="0"
            android:inputType="number"
            android:textColor="@color/darkgreen"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toEndOf="@+id/childrenTxt"
            app:layout_constraintTop_toBottomOf="@+id/adultPax"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/notesTxt"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="> Note/s (Optional): "
            android:textColor="@color/darkgreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:layout_constraintVertical_bias="0.047" />


        <EditText
            android:id="@+id/notesEditTxt"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_light"
            android:gravity="start"
            android:hint="Type your Personal Note/s Here ... "
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="3"
            android:padding="5dp"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notesTxt"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/toPayTxt"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="256dp"
            android:fontFamily="@font/poppins_medium"
            android:text="> To Pay (Transaction Fee)   Php "
            android:textColor="@color/darkgreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notesEditTxt"
            app:layout_constraintVertical_bias="0.151" />

        <ImageView
            android:id="@+id/bulbicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toPayTxt"
            app:layout_constraintVertical_bias="0.044"
            app:srcCompat="@drawable/idea_icon" />

        <TextView
            android:id="@+id/notePaymentTxt"
            android:layout_width="294dp"
            android:layout_height="48dp"
            android:fontFamily="@font/poppins_light"
            android:text="To Protect Payment never transfer money or communicate outside of the Pakigsa-Bot App."
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toEndOf="@+id/bulbicon"
            app:layout_constraintTop_toBottomOf="@+id/toPayTxt"
            app:layout_constraintVertical_bias="0.048" />

        <Button
            android:id="@+id/reserveBtn"
            android:layout_width="118dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="RESERVE"
            android:textColor="@color/lemongreen"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notePaymentTxt"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/messageTxt"
            android:layout_width="414dp"
            android:layout_height="29dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reserveBtn"
            app:layout_constraintVertical_bias="0.085" />

        <TextView
            android:id="@+id/timeSlotTxt"
            android:layout_width="83dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toEndOf="@+id/timeSlotSpinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.971" />

        <TextView
            android:id="@+id/amountToPay"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textColor="@color/darkgreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/notePaymentTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/toPayTxt"
            app:layout_constraintTop_toBottomOf="@+id/notesEditTxt"
            app:layout_constraintVertical_bias="0.47" />

        <com.paypal.checkout.paymentbutton.PayPalButton
            android:id="@+id/payPalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageTxt"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>