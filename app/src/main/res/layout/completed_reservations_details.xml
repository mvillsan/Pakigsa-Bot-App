<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/browser_actions_bg_grey"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Completed Reservation Details"
        android:textColor="@color/darkgreen"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/checkInDateET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Date: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_reserve"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/customerName"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Name: "
        android:textSize="12sp"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/reservedET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Reserved: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_reservations"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/adultPaxET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Adults: "
        android:textSize="12sp"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/petPaxET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="No. of Pets: "
        android:textSize="12sp"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/feeET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Reservation Fee: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_payment"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/notesTxt"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Notes: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/dateTransacET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Date of Completion: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_reserve"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
</LinearLayout>
