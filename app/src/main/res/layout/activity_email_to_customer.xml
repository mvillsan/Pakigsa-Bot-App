<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topbar_bg_white_bo"
    tools:context=".ReservationsBO.EmailToCustomer">

    <ImageView
        android:id="@+id/backBtnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/ic_arrow_back_bo" />

    <ImageView
        android:id="@+id/gmailBtn"
        android:layout_width="44dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backBtnEmail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        app:srcCompat="@drawable/gmail_icon_bo" />

    <TextView
        android:id="@+id/composeTxt"
        android:layout_width="193dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:text="Compose an Email"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toEndOf="@+id/gmailBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/toTxt"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:fontFamily="@font/poppins_light"
        android:text="To: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmailBtn"
        app:layout_constraintVertical_bias="0.085" />

    <EditText
        android:id="@+id/emailAddEditTextEM"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="5sp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toEndOf="@+id/toTxt"
        app:layout_constraintTop_toBottomOf="@+id/composeTxt"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/subjTxt"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:fontFamily="@font/poppins_light"
        android:text="Subject: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toTxt"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/subjectETEM"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="Enter a Subject"
        android:inputType="text"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/subjTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailAddEditTextEM"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/msgTxt"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:fontFamily="@font/poppins_light"
        android:text="Message: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjTxt"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/bodyEDEM"
        android:layout_width="310dp"
        android:layout_height="228dp"
        android:layout_marginHorizontal="16dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:hint="Type your Message Here ... "
        android:inputType="text"
        android:lineSpacingExtra="5sp"
        android:lines="10"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgTxt"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sendEmailBtn"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:background="@color/darkbluegreen"
        android:fontFamily="@font/poppins_medium"
        android:text="Send"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodyEDEM"
        app:layout_constraintVertical_bias="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>