<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/favImgViewEstRVImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_imageicon"
            app:riv_border_color="@color/white"
            app:riv_border_width="2dip"
            app:riv_corner_radius="20dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/favEstRVName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/favImgViewEstRVImg"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favEstRVAddress"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favEstRVName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/favImgViewEstRVImg"
            android:text="Address"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/removeFavEstBtn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="-11dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/favEstRVAddress"
            android:layout_toRightOf="@id/favEstRVName"
            android:background="@color/red"
            android:fontFamily="@font/poppins_medium"
            android:text="REMOVE"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>