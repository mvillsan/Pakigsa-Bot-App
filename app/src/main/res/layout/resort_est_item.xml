<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgResort"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_imageicon"
            app:riv_border_color="@color/white"
            app:riv_border_width="2dip"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/resortEstNameTV"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/imgResort"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resortEstAddTV"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/resortEstNameTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgResort"
            android:text="Address"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/resortEstFeedback"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/resortEstAddTV"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgResort"
            android:fontFamily="@font/poppins_light"
            android:text="Ratings and Reviews"
            android:textSize="10sp" />

        <Button
            android:id="@+id/selectBtn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/resortEstNameTV"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="Select"
            android:textColor="@color/white" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>